<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvComa"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text=","
        android:textColor="@color/blanco"
        android:gravity="center_horizontal"
        android:textSize="50dp"
        android:background="@color/plomoOscuro"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/tvCero"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:textColor="@color/blanco"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50dp"
        android:background="@color/plomoOscuro"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tvComa"/>
    <TextView
        android:id="@+id/tvIgual"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        android:textColor="@color/blanco"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50dp"
        android:background="@color/plomoOscuro"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tvCero"/>

    <TextView
        android:id="@+id/tvUno"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:textColor="@color/blanco"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50dp"
        android:background="@color/plomoOscuro"
        android:layout_above="@id/tvComa"/>
    <TextView
        android:id="@+id/tvDos"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:textColor="@color/blanco"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50dp"
        android:background="@color/plomoOscuro"
        android:layout_toRightOf="@id/tvUno"
        android:layout_above="@id/tvCero"/>
    <TextView
        android:id="@+id/tvTres"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:textColor="@color/blanco"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50dp"
        android:background="@color/plomoOscuro"
        android:layout_toRightOf="@id/tvDos"
        android:layout_above="@id/tvIgual"/>
    <TextView
        android:id="@+id/tvCuatro"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:textColor="@color/blanco"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50dp"
        android:background="@color/plomoOscuro"
        android:layout_above="@id/tvUno"/>
    <TextView
        android:id="@+id/tvCinco"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:textColor="@color/blanco"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50dp"
        android:background="@color/plomoOscuro"
        android:layout_toRightOf="@id/tvCuatro"
        android:layout_above="@id/tvDos"/>
    <TextView
        android:id="@+id/tvSeis"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:textColor="@color/blanco"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50dp"
        android:background="@color/plomoOscuro"
        android:layout_toRightOf="@id/tvCinco"
        android:layout_above="@id/tvTres"/>
    <TextView
        android:id="@+id/tvSiete"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:textColor="@color/blanco"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50dp"
        android:background="@color/plomoOscuro"
        android:layout_above="@id/tvCuatro"/>
    <TextView
        android:id="@+id/tvOcho"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:textColor="@color/blanco"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50dp"
        android:background="@color/plomoOscuro"
        android:layout_toRightOf="@id/tvSiete"
        android:layout_above="@id/tvCinco"/>
    <TextView
        android:id="@+id/tvNueve"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:textColor="@color/blanco"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50dp"
        android:background="@color/plomoOscuro"
        android:layout_toRightOf="@id/tvOcho"
        android:layout_above="@id/tvSeis"/>
    <LinearLayout
        android:id="@+id/tvOperaciones"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/tvNueve"
        android:layout_below="@id/tvResultado"
        android:weightSum="5">
        <TextView
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="CE"
            android:textColor="@color/blanco"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="30dp"
            android:background="@color/plomoClaro"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="/"
            android:textColor="@color/blanco"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="30dp"
            android:background="@color/plomoClaro"
            />
        <TextView

            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="*"
            android:textColor="@color/blanco"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="30dp"
            android:background="@color/plomoClaro"
            />
        <TextView

            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="-"
            android:textColor="@color/blanco"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="30dp"
            android:background="@color/plomoClaro"
            />
        <TextView

            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@color/blanco"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="30dp"
            android:background="@color/plomoClaro"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tvSiete"
        android:text="6546546"
        android:gravity="right|center_vertical"
        android:textSize="60dp"/>
    <View
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/verde"
        android:layout_toRightOf="@id/tvOperaciones"
        android:layout_below="@id/tvResultado">
    </View>

</RelativeLayout>
